{
  "name": "web-dev-skeleton",
  "version": "1.0.0-alpha",
  "description": "Scaffold for web development",
  "author": "DEADB17 <deadb17@gmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "dependencies": {
    "node-sass": "^3.9.3",
    "rimraf": "^2.5.4"
  },
  "devDependencies": {
    "@deadb17/live-reload": "^1.4.1",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.5.0",
    "http-server": "^0.9.0",
    "npm-run-all": "^3.1.0",
    "sass-lint": "^1.9.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:js": "eslint 'src/**/*.js'",
    "clean": "rimraf www/*",
    "static": "cp src/*.{html,ico} www/",
    "watch:static": "chokidar src/*.html -c 'npm run static'",
    "dev:css": "node-sass --source-map true --output-style nested src/styles/index.scss www/css/index.css",
    "dist:css": "node-sass --source-map true --output-style compressed src/styles/index.scss www/css/index.css",
    "lint:scss": "sass-lint --config .scss-lint.yml --verbose --no-exit",
    "watch:css": "chokidar src/styles/*.scss -c 'npm run dev:css'",
    "live-reload": "live-reload www --port 8001 --key ssl/server.key --cert ssl/server.crt",
    "serve": "http-server www/ -a localhost -p 8000 --ssl --key ssl/server.key --cert ssl/server.crt",
    "lint": "npm run lint:js && npm run lint:scss",
    "build": "npm run clean && npm run static && npm run dist:css",
    "start": "npm-run-all clean static dev:css --parallel live-reload serve watch:*"
  }
}
