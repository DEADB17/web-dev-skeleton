{
  "name": "@deadb17/web-dev-skeleton",
  "version": "1.0.0-alpha.1",
  "description": "Scaffold for web development",
  "author": "DEADB17 <deadb17@gmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "repository": "https://github.com/DEADB17/web-dev-skeleton",
  "issues": "https://github.com/DEADB17/web-dev-skeleton/issues",
  "dependencies": {},
  "devDependencies": {
    "@deadb17/eslint-config": "^1.0.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.17.0",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.4",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sass-lint": "^1.10.2",
    "tape": "^4.6.3",
    "uglifyjs": "^2.4.10"
  },
  "scripts": {
    "postversion": "git push && git push --tags",
    "test": "tape src/test/**/*.js",
    "dev:js": "rollup --config rollup.config.js --format iife --input src/scripts/index.js --output www/js/bundle.js --sourcemap",
    "min:js": "uglifyjs www/js/bundle.js --compress --mangle --output www/js/bundle.min.js --in-source-map www/js/bundle.js.map --source-map www/js/bundle.min.js.map",
    "lint:js": "eslint 'src/**/*.js'",
    "watch:js": "chokidar src/scripts/*.js -c 'npm run dev:js'",
    "dev:css": "node-sass --source-map true --output-style nested src/styles/index.scss www/css/index.css",
    "dist:css": "node-sass --source-map true --output-style compressed src/styles/index.scss www/css/index.css",
    "lint:scss": "sass-lint --config .sass-lint.yml --verbose --no-exit",
    "watch:css": "chokidar src/styles/*.scss -c 'npm run dev:css'",
    "clean:www": "rimraf www",
    "mk:www": "mkdir www",
    "static": "cp src/*.{html,ico} www/",
    "build:base": "run-s clean:www mk:www static",
    "watch:static": "chokidar src/*.html -c 'npm run static'",
    "lint": "run-p lint:js lint:scss",
    "build": "run-s build:base dist:css dev:js min:js",
    "serve": "live-server --port=8000 --host=localhost --browser='google chrome' --https=https.js www",
    "start": "run-s build:base dev:css dev:js restart",
    "restart": "run-p serve watch:*"
  }
}
